#!/bin/zsh
COMMAND=$1

initAppwrite() {
  docker run --rm -it \
    --volume /var/run/docker.sock:/var/run/docker.sock \
    --volume "$(pwd)"/appwrite:/usr/src/code/appwrite:rw \
    --entrypoint="install" \
    appwrite/appwrite:0.13.4
}

loginToAppwrite() {
  echo "Logging in to API ..."
  appwrite login
  appwrite init --all
}

stopAppwrite() {
  docker-compose --file appwrite/docker-compose.yml down
}

startFrontend() {
  npm run dev
}

install() {
  echo "Installing node modules for frontend"
  npm install

  echo "Installing appwrite cli ..."
  npm install -g appwrite-cli
}

deploy() {
  echo "Deploying Project"
  appwrite deploy --all
}

# Commando functions
initServices() {
  echo "Setting up appwrite for the first time"
  startAppwrite
  install
  startFrontend
}

startServices() {
  echo "Starting services ..."
  startAppwrite
  startFrontend
}

deploySettings() {
  echo "Deploying settings"
  appwrite deploy
}

# Command execution
case "$COMMAND" in

up)
  initAppwrite
  ;;
down)
  stopAppwrite
  ;;
[iI]*)
  install
  ;;
login)
  loginToAppwrite;;
deploy)
  deploy
  ;;
*)
  echo "No command recognized. "
  echo "Possible commands: [up, down, login, i(nstall)]"
  ;;
esac
